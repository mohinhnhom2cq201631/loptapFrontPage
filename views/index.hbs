{{#each products}}
<div class="row">
  {{#each this}}
  <div class="col-sm-3 mb-2">
      <div class="card" style="width:250px ; height:350px">
          <div class="card-body">
                <img class="card-img-top mb-1" src="/Images/{{this.img}}" alt="Card image" style="width:220px">
            <p class="card-title font-weight-bold" size = "3">{{this.name}}</p>
            <font class="card-text" size = "2">{{this.description}}</font>
          </div>
          <div class="container">
            <div class="row">
              <div class="col-sm">
                <a href="#" class="btn btn-primary btn-sm">Xem
                        <i class="fa fa-eye ml-1" aria-hidden="true"></i></a>
              </div>
              <div class="col-sm">
                <p class="price">
                    {{this.price}}
                </p>
              </div>
            </div>
          </div>
      </div>
  </div>
  {{/each}}
 </div>
{{/each}}
<nav aria-label="Search results pages">
   <div class="row mt-4">
    <div class="col-sm-12">
      <nav aria-label="Page navigation example">
        <ul class="pagination  mb-4  justify-content-center ">
          {{#if isFirst}}
          <li class="page-item disabled">
            {{else}}
          <li class="page-item">
          {{/if}}
            <a class="page-link" href="?page={{this.prePage}}" aria-label="Previous">
              <span aria-hidden="true">Trước</span>
            </a>
          </li>
          {{#each this.pages}}
          {{#if active}}
          <li class="page-item active" aria-current="page">
            <a class="page-link" href="javascript:;">
              {{value}} <span class="sr-only">(current)</span>
            </a>
          </li>
          {{else}}
          <li class="page-item">
            <a class="page-link" href="?page={{value}}">{{value}}</a>
          </li>
          {{/if}}
          {{/each}}
            {{#if isLast}}
          <li class="page-item disabled">
            {{else}}
          <li class="page-item">
          {{/if}}
            <a class="page-link" href="?page={{this.nextPage}}" aria-label="Next">
              <span aria-hidden="true">Sau</span>
            </a>
          </li>
        </ul>
      </nav>
    </div>
</div>
</nav>


