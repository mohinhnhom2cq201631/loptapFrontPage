<h1>Thông tin người dùng</h1>
<p>Tên tài khoản: {{user.username}}</p>
<p>Email: {{user.email}}</p>

<form method="POST">
  <div class="form-group">
    <label for="exampleInputEmail1">Họ và tên: {{info.name}}</label>
    <input type="text" name="name" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Nhập họ và tên mới">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Địa chỉ: {{info.address}}</label>
    <input type="text" name="address" class="form-control" id="exampleInputPassword1" placeholder="Nhập địa chỉ mới">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Số điện thoại: {{info.sdt}}</label>
    <input type="text" name="sdt" class="form-control" id="exampleInputPassword1" placeholder="Nhập số điện thoại mới">
  </div>
  <button type="submit" class="btn btn-primary">Chỉnh sửa</button>
</form>

<h1>Danh sách đơn hàng</h1>
{{#if orders}}
<table class="table table-bordered">
            <thead>
            <tr>
                <th scope="col">Sản phẩm</th>
                <th scope="col">Tổng giá trị</th>
                <th scope="col">Ngày đặt</th>
                <th scope="col">Trạng thái</th>
            </tr>
            </thead>
            <tbody id="body-order">
            {{#each orders}}
                <tr>
                    <td>
                        {{#each this.cart.items}}
                            {{#if this}}
                                {{this.name}}&nbsp;-&nbsp;{{this.size}}&nbsp;inch&nbsp;-&nbsp;{{this.price}}đ</br>
                            {{/if}}
                        {{/each}}
                    </td>
                    <td>{{this.cart.totalPrice}}</td>
                    <td>{{this.created}}</td>
                    <td>{{this.status}}</td>
                </tr>
            {{/each}}
            </tbody>
        </table>
{{else}}
<p>Bạn chưa có đơn hàng nào.</p>
{{/if}}