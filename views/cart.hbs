<div class="container">
    {{#if cart}}
        <table id="cart" class="table table-hover table-condensed">
            <thead>
            <tr>
                <th style="width:50%">Sản phẩm</th>
                <th style="width:8%">Size</th>
                <th style="width:10%">Giá tiền</th>
            </tr>
            </thead>
            <tbody>
            {{#each cart.items}}
                {{#if this}}
                    <tr>
                        <td data-th="Product">
                            <div class="row">
                                <div class="col-sm-2 hidden-xs"><img src="{{this.img1}}" class="img-responsive"/></div>
                                <div class="col-sm-10">
                                    <h4 class="nomargin">{{this.name}}</h4>
                                </div>
                            </div>
                        </td>
                        <td>{{this.size}}</td>
                        <td data-th="Price">{{this.price}}</td>
                    </tr>
                {{/if}}
            {{/each}}
            </tbody>
