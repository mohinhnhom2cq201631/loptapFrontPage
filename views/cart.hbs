<div class="container">
    {{#if cart}}
        <table id="cart" class="table table-hover table-condensed">
            <thead>
            <tr>
                <th style="width:50%">Sản phẩm</th>
                <th style="width:10%">Giá tiền</th>
            </tr>
            </thead>
            <tbody>
            {{#each cart.items}}
                {{#if this}}
                    <tr>
                        <td data-th="Product">
                            <div class="row">
                                <div class="col-sm-2 hidden-xs"><img src="{{this.img}}" class="img-responsive"/></div>
                                <div class="col-sm-10">
                                    <h4 class="nomargin">{{this.name}}</h4>
                                </div>
                            </div>
                        </td>
                        <td data-th="Price">{{this.price}}</td>
                        <td>
                            <form action="/cart/remove/{{this._id}}" method="post">
                                <a onclick="this.parentElement.submit()" class="btn btn-danger btn-sm"><i class="fa fa-trash-o"></i></a>
                            </form>
                        </td>
                    </tr>
                {{/if}}
            {{/each}}
            </tbody>
            <tfoot>
            <tr>
                <td><a href="/" class="btn btn-warning"><i class="fa fa-angle-left"></i>&nbsp;Tiếp tục mua sắm</a></td>
                <td colspan="2" class="hidden-xs"></td>
                <td class="hidden-xs text-center"><strong>Tổng tiền&nbsp;{{cart.totalPrice}}</strong></td>
                <td>
                    <form action="/checkout" method="post">
                        <a onclick="this.parentElement.submit()" class="btn btn-danger btn-sm">Thanh toán&nbsp;<i class="fa fa-angle-right"></a>
                    </form>
                </td>
            </tr>
            </tfoot>
        </table>
    {{else}}
        <img src="https://www.seekpng.com/png/detail/35-354177_shopping-cart-cart-ecommerce-shopping-amazon-shopping-cart.png">
    {{/if}}
</div>